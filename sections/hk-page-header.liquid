{% schema %}
{
  "name": "HK Page Header",
  "enabled_on": {
    "templates": ["index", "page"]
  },
  "settings": [
    {
      "type": "html",
      "id": "title",
      "label": "Title",
      "default": "Page <span style=\"color: #CFD821;\">Title</span>",
      "info": "Use HTML spans with style=\"color: #hexcode;\" for colored text"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Add your content here</p>"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "1920x1080 for standard resolution. 3840x2160 for 2x."
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image (optional)"
    },
    {
      "type": "range",
      "id": "mobile_background_brightness",
      "label": "Mobile Background Brightness",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 50,
      "info": "Adjust the brightness of the mobile background image (0 = completely dark, 100 = original brightness)"
    },
    {
      "type": "checkbox",
      "id": "inner_content_style",
      "label": "Inner Content Style",
      "default": false,
      "info": "If enabled, the content will be inside the header container with an additional background image. Use for layouts like Awards and Careers."
    },
    {
      "type": "image_picker",
      "id": "inner_content_background_image",
      "label": "Inner Content Background Image",
      "info": "1440x690 for standard resolution. 2880x1380 for 2x."
    },
    {
      "type": "select",
      "id": "background_image_position",
      "label": "Background Image Position",
      "options": [
        {
          "value": "center center",
          "label": "Center"
        },
        {
          "value": "top center",
          "label": "Top Center"
        },
        {
          "value": "bottom center",
          "label": "Bottom Center"
        }
      ],
      "default": "center center"
    },
    {
      "type": "select",
      "id": "inner_content_text_position",
      "label": "Inner Content Text Position",
      "options": [
        {
          "value": "top-left",
          "label": "Top Left"
        },
        {
          "value": "top-right",
          "label": "Top Right"
        },
        {
          "value": "bottom-center",
          "label": "Bottom Center"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "Click Here"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "Button Style",
          "options": [
            {
              "value": "green",
              "label": "Green"
            },
            {
              "value": "black",
              "label": "Black"
            }
          ],
          "default": "green"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HK Page Header",
      "blocks": [
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="hardknock-page-header inner-content-style-{{ section.settings.inner_content_style }} inner-content-text-position-{{ section.settings.inner_content_text_position }}">
  {% assign bg_image = section.settings.background_image %}
  {% assign mobile_bg_image = section.settings.mobile_background_image %}

  {% capture alt_text %}{% render 'image-alt-fallback', image: bg_image %}{% endcapture %}
  {% assign alt_text = alt_text | strip %}

  <picture class="hardknock-page-header__background">
    {% if mobile_bg_image != blank %}
      <source
        media="(max-width: 768px)"
        srcset="
          {{ mobile_bg_image | image_url: width: 375 }} 375w,
          {{ mobile_bg_image | image_url: width: 550 }} 550w,
          {{ mobile_bg_image | image_url: width: 750 }} 750w
        "
        sizes="100vw"
      >
    {% endif %}
    {% if bg_image != blank %}
      <source
        srcset="
          {{ bg_image | image_url: width: 750 }} 750w,
          {{ bg_image | image_url: width: 1100 }} 1100w,
          {{ bg_image | image_url: width: 1500 }} 1500w,
          {{ bg_image | image_url: width: 2000 }} 2000w
        "
        sizes="100vw"
      >
      {% capture alt_text %}{% render 'image-alt-fallback', image: bg_image %}{% endcapture %}
      {% assign alt_text = alt_text | strip %}
      <img
        src="{{ bg_image | image_url: width: 1500 }}"
        alt="{{ alt_text }}"
        loading="eager"
        width="{{ bg_image.width }}"
        height="{{ bg_image.height }}"
        style="object-position: {{ section.settings.background_image_position }}"
      >
    {% endif %}
  </picture>

  <div class="hardknock-page-header__container page-width">
    <div class="inner relative">
      <div class="hardknock-page-header__content relative z-index-1 scroll-trigger animate--slide-in">
        <h1 class="hardknock-page-header__title color-white scroll-trigger animate--slide-in" style="--animation-order: 0;">
          {{ section.settings.title }}
        </h1>

        {% if section.settings.content != blank %}
          <div class="hardknock-page-header__text color-white scroll-trigger animate--slide-in" style="--animation-order: 1;">
            {{ section.settings.content }}
          </div>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <div class="hardknock-page-header__buttons scroll-trigger animate--slide-in" style="--animation-order: 2;">
            {% for block in section.blocks %}
              {% if block.type == 'button' %}
                <a
                  href="{{ block.settings.button_link }}"
                  class="button button--{{ block.settings.button_style }}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_text }}
                </a>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>
              {% if section.settings.inner_content_style and section.settings.inner_content_background_image != blank %}
          <div class="hardknock-page-header__inner-content-background">
            {% capture alt_text %}{% render 'image-alt-fallback', image: section.settings.inner_content_background_image %}{% endcapture %}
            {% assign alt_text = alt_text | strip %}
            {{
              section.settings.inner_content_background_image
              | image_url: width: 1400
              | image_tag:
                widths: '700, 1100, 1400',
                class: 'object-fit-cover',
                loading: 'lazy',
                sizes: '100vw',
                alt: alt_text
            }}
          </div>
        {% endif %}
    </div>
  </div>
</div>

{{ 'hk-page-header.css' | asset_url | stylesheet_tag }}

<style>
  @media (max-width: 1024px) {
    #shopify-section-{{ section.id }} .hardknock-page-header__background {
      filter: brightness({{ section.settings.mobile_background_brightness | default: 50 }}%);
    }
  }
</style>
