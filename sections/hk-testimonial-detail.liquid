{% schema %}
{
  "name": "HK Testimonial Detail",
  "tag": "section",
  "disabled_on": {
    "templates": ["product"]
  },
  "settings": [
    {
      "type": "text",
      "id": "name",
      "label": "Name"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Location"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Testimonial Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "HK Testimonial Detail"
    }
  ]
}
{% endschema %}

{{ 'hk-page-header.css' | asset_url | stylesheet_tag }}

<style>
  .hardknock-page-header {
    margin-top: 0 !important;
  }

  .hardknock-page-header__inner-content-background:before {
    display: none;
  }

  .testimonial-detail__text-content {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonial-detail__name {
    font-size: 50px;
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .testimonial-detail__location {
    margin-bottom: 2rem;
    color: #666;
  }

  .testimonial-detail__testimonial {
    font-size: 24px;
    line-height: 1.33;
  }

  @media (max-width: 1024px) {
    .testimonial-detail__name {
      font-size: 36px;
    }
    
    .testimonial-detail__testimonial {
      font-size: 20px;
    }
  }
</style>

<section class="hk-testimonial-detail">
  <div class="hardknock-page-header inner-content-style-true">
    {% assign bg_image = settings.blog_page_header_bg %}
    {% assign mobile_bg_image = settings.blog_page_header_bg_mobile %}

    <picture class="hardknock-page-header__background">
      {% if mobile_bg_image != blank %}
        <source
          media="(max-width: 768px)"
          srcset="
            {{ mobile_bg_image | image_url: width: 375 }} 375w,
            {{ mobile_bg_image | image_url: width: 550 }} 550w,
            {{ mobile_bg_image | image_url: width: 750 }} 750w
          "
          sizes="100vw"
        >
      {% endif %}
      {% if bg_image != blank %}
        <source
          srcset="
            {{ bg_image | image_url: width: 750 }} 750w,
            {{ bg_image | image_url: width: 1100 }} 1100w,
            {{ bg_image | image_url: width: 1500 }} 1500w,
            {{ bg_image | image_url: width: 2000 }} 2000w
          "
          sizes="100vw"
        >
        <img
          src="{{ bg_image | image_url: width: 1500 }}"
          alt=""
          loading="eager"
          width="{{ bg_image.width }}"
          height="{{ bg_image.height }}"
        >
      {% endif %}
    </picture>

    <div class="hardknock-page-header__container page-width">
      <div class="inner relative">
        <div class="hardknock-page-header__inner-content-background">
          {% if section.settings.image != blank %}
          {% capture alt_text %}{% render 'image-alt-fallback', image: section.settings.image %}{% endcapture %}
          {% assign alt_text = alt_text | strip %}
          {{
            section.settings.image
            | image_url: width: 1400
            | image_tag:
              widths: '700, 1100, 1400',
              class: 'object-fit-cover',
              loading: 'lazy',
              sizes: '100vw',
              alt: alt_text
          }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>

<div class="testimonial-detail v-margin-6 lg-v-margin-8">
  <div class="testimonial-detail__container page-width page-width--narrow">
    <div class="testimonial-detail__text-content">
      <h1 class="testimonial-detail__name">{{ section.settings.name }}</h1>
      <h2 class="h5 testimonial-detail__location">{{ section.settings.location }}</h2>
      <div class="testimonial-detail__testimonial">
        {{ section.settings.text }}
      </div>
    </div>
  </div>
</div>
</section>