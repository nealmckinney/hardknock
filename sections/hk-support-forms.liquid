<style>
  /* Hide success messages by default when both forms are on the same page */
  .inquiry-success,
  .dealer-success {
    display: none;
  }

  /* Show success message only when the specific form was submitted */
  .inquiry-success.show,
  .dealer-success.show {
    display: block;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Sync Inquiry Form email fields
    const inquiryEmailField = document.getElementById('InquiryForm-email');
    const inquiryHiddenEmail = inquiryEmailField?.closest('form')?.querySelector('input[name="contact[email]"]');

    if (inquiryEmailField && inquiryHiddenEmail) {
      inquiryEmailField.addEventListener('input', function () {
        inquiryHiddenEmail.value = this.value;
      });
    }

    // Sync Dealer Form email fields
    const dealerEmailField = document.getElementById('DealerForm-email');
    const dealerHiddenEmail = dealerEmailField?.closest('form')?.querySelector('input[name="contact[email]"]');

    if (dealerEmailField && dealerHiddenEmail) {
      dealerEmailField.addEventListener('input', function () {
        dealerHiddenEmail.value = this.value;
      });
    }

    // Handle form-specific success messages
    const inquiryForm = document.getElementById('InquiryForm');
    const dealerForm = document.getElementById('DealerForm');

    if (inquiryForm) {
      inquiryForm.addEventListener('submit', function () {
        // Show inquiry success, hide dealer success
        const inquirySuccess = document.querySelector('.inquiry-success');
        const dealerSuccess = document.querySelector('.dealer-success');

        if (inquirySuccess) inquirySuccess.classList.add('show');
        if (dealerSuccess) dealerSuccess.classList.remove('show');
      });
    }

    if (dealerForm) {
      dealerForm.addEventListener('submit', function () {
        // Show dealer success, hide inquiry success
        const inquirySuccess = document.querySelector('.inquiry-success');
        const dealerSuccess = document.querySelector('.dealer-success');

        if (dealerSuccess) dealerSuccess.classList.add('show');
        if (inquirySuccess) inquirySuccess.classList.remove('show');
      });
    }
  });
</script>
