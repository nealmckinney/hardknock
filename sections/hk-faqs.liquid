
<div class="hardknock-page-header inner-content-style-true inner-content-text-position-top-left">
  {% assign bg_image = section.settings.background_image %}
  {% assign mobile_bg_image = section.settings.mobile_background_image %}

  <picture class="hardknock-page-header__background">
    {% if mobile_bg_image != blank %}
      <source
        media="(max-width: 768px)"
        srcset="
          {{ mobile_bg_image | image_url: width: 375 }} 375w,
          {{ mobile_bg_image | image_url: width: 550 }} 550w,
          {{ mobile_bg_image | image_url: width: 750 }} 750w
        "
        sizes="100vw"
      >
    {% endif %}
    {% if bg_image != blank %}
      <source
        srcset="
          {{ bg_image | image_url: width: 750 }} 750w,
          {{ bg_image | image_url: width: 1100 }} 1100w,
          {{ bg_image | image_url: width: 1500 }} 1500w,
          {{ bg_image | image_url: width: 2000 }} 2000w
        "
        sizes="100vw"
      >
      <img
        src="{{ bg_image | image_url: width: 1500 }}"
        alt=""
        loading="eager"
        width="{{ bg_image.width }}"
        height="{{ bg_image.height }}"
      >
    {% endif %}
  </picture>
  <div class="hardknock-page-header__container page-width ">
    <div class="inner relative">
      <div class="hardknock-page-header__content relative z-index-1">
        <h1 class="hardknock-page-header__title">
          {{ section.settings.heading }}
        </h1>
        <div class="hardknock-page-header__text">
          {{ section.settings.subheading }}
        </div>
      </div>

      <div class="hardknock-page-header__inner-content-background">
        {% comment %} <div
          id="location-map"
          data-address="{{ section.settings.map_address }}"
          data-marker-icon="{{ 'icon-find.svg' | asset_url }}"
          class="map-placeholder"
        ></div> {% endcomment %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "HK FAQs",
  "enabled_on": {
    "templates": ["page"]
  },
  "settings": [
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Construction has the highest rate of work-related traumatic brain injuries—and many helmets aren’t up to the task. Learn why Type II certification, chin straps, and rotational force protection are ...</p>"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQs"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Header Background Image",
      "info": "1920x1080 for standard resolution. 3840x2160 for 2x."
    },
    {
      "type": "image_picker",
      "id": "mobile_background_image",
      "label": "Mobile Background Image (optional)"
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question",
          "default": "What is your question?"
        },
        {
          "type": "richtext",
          "id": "answer",
          "label": "Answer",
          "default": "<p>Provide your answer here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "HK FAQs",
      "blocks": [
        {
          "type": "faq"
        },
        {
          "type": "faq"
        },
        {
          "type": "faq"
        }
      ]
    }
  ]
}
{% endschema %}

{% if section.blocks.size > 0 %}
  <section class="faqs v-margin-8">
    {% if section.settings.title != blank %}
      <div class="container page-width">
        <h2 class="h2 center mb-6">{{ section.settings.title }}</h2>
      </div>
    {% endif %}
    
    <div class="container page-width page-width--narrow">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'faq' %}
            <div class="faq radius-15 overflow-hidden{% if forloop.first %} active{% endif %}" {{ block.shopify_attributes }}>
              <div class="inner">
                <div class="flex-container align-center space-between column-gap-20">
                  <h3 class="h3 title v-margin-0">{{ block.settings.question }}</h3>
                  <div class="faq-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="12" height="13" viewBox="0 0 12 13" fill="none">
                      <path d="M10.9788 5.40168C11.8497 5.87492 11.8497 7.12508 10.9788 7.59832L2.09682 12.4247C1.2639 12.8773 0.250002 12.2743 0.250002 11.3263L0.250002 1.67366C0.250002 0.725711 1.2639 0.122736 2.09682 0.575335L10.9788 5.40168Z" fill="#626262" style="fill:#626262;fill:color(display-p3 0.3850 0.3850 0.3850);fill-opacity:1;"/>
                    </svg>
                  </div>
                </div>
                <div class="answer">
                  <div class="cms-content cms-content mt-5">
                    {{ block.settings.answer }}
                  </div>
                </div>
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </section>
{% endif %}

<style>
  .hardknock-page-header__inner-content-background:before {
    display: none;
  }
  .faqs .faq {
    background-color: #f5f5f5;
    box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0);
    padding: 20px;
    margin-bottom: 12px;
    transition: all 0.3s ease;
}

.faqs .faq .answer {
    transition: all 0.15s ease;
    opacity: 0;
    visibility: hidden;
    max-height: 0;
    overflow: hidden;
}

.faqs .faq .faq-icon svg, .faqs .faq .faq-icon svg path {
    transition: all 0.3s ease;
}

.faqs .faq.active {
    box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.25);
    margin-bottom: 80px;
    background-color: var(--color-green);
}

.faqs .faq.active .faq-icon svg {
    transform: rotate(90deg);
    fill: var(--color-red);
}

.faqs .faq.active .faq-icon svg path {
    fill: var(--color-red) !important;
}

.faqs .faq.active .answer {
    opacity: 1;
    visibility: visible;
    max-height: 1000px; /* Adjust this value based on your content */
    margin-top: 20px;
}


@media (min-width: 960px) {
    .faqs .faq {
        padding: 40px;
    }
}
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqs = document.querySelectorAll('.faq');
    
    faqs.forEach(faq => {
      faq.addEventListener('click', function(event) {
        // Don't toggle if clicking on a link or button
        if (event.target.tagName === 'A' || event.target.tagName === 'BUTTON' || event.target.closest('a') || event.target.closest('button')) {
          return;
        }
        
        // Toggle current FAQ
        faq.classList.toggle('active');
      });
    });
  });
</script>

